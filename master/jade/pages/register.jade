.login_form.register(ng-controller="RegisterFormController as reg")
  .container
    .row
      .col-md-8.col-sm-8.col-xs-12.col-centered
        .regis_new_acc
          img(src='app/images/regis-logo.png')
          h2 Register a New Account
          ul#steps
            li.current
              span 1
              h3 Registeration Form
            li
              span 2
              h3 Confirm Account
            li
              span 3
              h3 Login
        // regis_new_acc
        form
          .login_input
            .form-group
              label.dis-blink(for='fullname') Full Name
              input#email.form-control(type='text', name='fullname')
            .form-group
              label.dis-blink(for='username') Username
              input#email.form-control(type='text', name='username')
            .form-group
              label.dis-blink(for='email') Email
              input#email.form-control(type='email', name='email')
            .form-group
              label.dis-blink(for='phone') Phone Number
              input#email.form-control(type='email', name='phone')
            .form-group
              label.dis-blink(for='password') Password
              input#pwd.form-control(type='password', name='password')
            .form-group
              label.dis-blink(for='confirm_p') Confirm Password
              input#pwd.form-control(type='password', name='confirm_p')
            .checkbox
              label
                input(type='checkbox', name='remember')
                | i consent that I am over 18
            button.btn.btn-default(type='button', ng-click='reg.confirmAccount();') Register

